<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Admin.AdminOrderListActivity">

    <com.rey.material.widget.Button
        android:id="@+id/activity_admin_order_list_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Назад"
        android:background="@drawable/button"/>

    <TextView
        android:layout_below="@+id/activity_admin_order_list_back_btn"
        android:id="@+id/admin_order_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Список заказов"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/admin_order_list_title"
        android:layout_marginTop="10dp" />

</RelativeLayout>