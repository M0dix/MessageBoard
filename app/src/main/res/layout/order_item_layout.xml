<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:background="@drawable/border"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="30dp">

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/order_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Product date"
            android:textAlignment="textStart"
            android:textColor="#8C8C8C"
            android:textSize="20dp"
            android:textStyle="bold" />

            <TextView
                android:id="@+id/order_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_date"
                android:padding="8dp"
                android:text="username"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/order_userphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_username"
                android:padding="8dp"
                android:text="userphone"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/order_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_userphone"
                android:padding="8dp"
                android:text="product name"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/order_product_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_below="@+id/order_product_name"
                android:text="product phone"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                />


            <TextView
                android:id="@+id/order_product_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_product_phone"
                android:padding="8dp"
                android:text="count"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/order_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_below="@+id/order_product_count"
                android:text="orderprice"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                />

            <com.rey.material.widget.Button
                android:visibility="invisible"
                android:id="@+id/order_delete_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_product_price"
                android:textSize="30sp"
                android:background="@drawable/button"
                android:text="âž–"/>
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>